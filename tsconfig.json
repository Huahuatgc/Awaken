{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "target": "ES6",
    "noImplicitAny": false,
    "module": "commonjs",
    "allowJs": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "noFallthroughCasesInSwitch": true,
    "removeComments": true,
    "pretty": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "typescript-plugin-css-modules"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "es5",
    "es2015.promise",
    "es2016",
    "dom"
  ]
}